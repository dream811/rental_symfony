{% trans_default_domain 'FOSUserBundle' %}

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
        <div class="card bg-secondary shadow border-2">
            <div class="card-header border-2">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0 text-center">{{ 'Already have an account ?'|trans }}</h3>
                    </div>
                </div>
            </div>
            <div class="card-body px-lg-5 py-lg-5 pb-4">
                {% if error %}
                    <div class="alert alert-danger" role="alert">
                        <strong>Ooops!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <form novalidate="novalidate" role="form" action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div class="form-group mb-3">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                            </div>
                            <input class="form-control" id="username" name="_username" placeholder="{{ 'security.login.username'|trans }}" type="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                            </div>
                            <input class="form-control" id="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" type="password">
                        </div>
                    </div>
                    <div class="custom-control custom-control-alternative custom-checkbox">
                        <input class="custom-control-input" id="remember_me" name="_remember_me" type="checkbox">
                        <label class="custom-control-label" for="remember_me">
                            <span class="text-muted">{{ 'security.login.remember_me'|trans }}</span>
                        </label>
                    </div>
                    <div class="text-center">
                        <button type="submit" id="_submit" name="_submit" class="btn btn-primary my-4">{{ 'security.login.submit'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <a href="{{ path('fos_user_resetting_request') }}" class="text-light"><small>{{ 'Forgot password ?'|trans }}</small></a>
            </div>
            <div class="col-6 text-right">
                <a href="{{ path('fos_user_registration_register') }}" class="text-light"><small>{{ 'Create new account ?'|trans }}</small></a>
            </div>
        </div>
    </div>
</div>