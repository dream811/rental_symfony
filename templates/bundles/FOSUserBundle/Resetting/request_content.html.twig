{% trans_default_domain 'FOSUserBundle' %}

<div class="row justify-content-center">
    <div class="col-lg-6 col-md-10">
        <div class="card bg-secondary shadow border-2">
            <div class="card-header border-2">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0 text-center">{{ 'Forgot password ?'|trans }}</h3>
                    </div>
                </div>
            </div>
            <div class="card-body px-lg-5 py-lg-5 pb-4">
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <div class="form-group">
                        <input type="text" id="username" class="form-control form-control-alternative" placeholder="{{ 'resetting.request.username'|trans }}" name="username" required="required" />
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary" type="submit"><i class="fas fa-check"></i> {{ 'resetting.request.submit'|trans }}</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <a href="{{ path('fos_user_registration_register') }}" class="text-light"><small>{{ 'Create new account ?'|trans }}</small></a>
            </div>
            <div class="col-6 text-right">
                <a href="{{ path('fos_user_security_login') }}" class="text-light"><small>{{ 'Already have an account ?'|trans }}</small></a>
            </div>
        </div>
    </div>
</div>
