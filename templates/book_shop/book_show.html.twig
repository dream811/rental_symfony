{% extends 'client_layout.html.twig' %}

{% block title %}{{ 'Book'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/css/alertify.min.css"/>
    <!-- Default theme -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/css/themes/default.min.css"/>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <img class="card-img-top" alt="Image placeholder" src="{{ vich_uploader_asset(book, 'coverFile')|default(asset('assets/img/icons/no-cover.png')) }}">
            </div>
        </div>
        <div class="col-md-8">
            <div class="card bg-secondary shadow">
                <div class="card-header bg-white border-2">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">{{ 'Book Details'|trans }}</h3>
                        </div>
                        <div class="col text-right">
                            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal"
                                    data-target="#modal-{{ book.id }}">
                                {{ 'Borrow this book'|trans }}
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row pt-2 pb-2">
                        <div class="col-md-12">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <i class="ni ni-book-bookmark"></i>
                                </div>
                                <div class="col ml--2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0 text-sm">{{ 'Title of the book'|trans }}</h4>
                                        </div>
                                    </div>
                                    <p class="text-sm mb-0">{{ book.title }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row pt-2 pb-2">
                        <div class="col-md-12">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <i class="ni ni-bag-17"></i>
                                </div>
                                <div class="col ml--2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0 text-sm">{{ 'Description'|trans }}</h4>
                                        </div>
                                    </div>
                                    <p class="text-sm mb-0">{{ book.description }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row  pt-2 pb-2">
                        <div class="col-md-6">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <i class="ni ni-circle-08"></i>
                                </div>
                                <div class="col ml--2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0 text-sm">{{ 'Author of the book'|trans }}</h4>
                                        </div>
                                    </div>
                                    <p class="text-sm mb-0">{{ book.author }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <i class="ni ni-calendar-grid-58"></i>
                                </div>
                                <div class="col ml--2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0 text-sm">{{ 'Publish date'|trans }}</h4>
                                        </div>
                                    </div>
                                    <p class="text-sm mb-0">{{ book.publishDate|date('d/m/yy')|default('---') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row  pt-2 pb-2">
                        <div class="col-md-6">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <i class="ni ni-books"></i>
                                </div>
                                <div class="col ml--2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0 text-sm">{{ 'Book available'|trans }}</h4>
                                        </div>
                                    </div>
                                    <p class="text-sm mb-0">{{ in_stock }} {{ 'Book'|trans }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <i class="ni ni-planet"></i>
                                </div>
                                <div class="col ml--2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0 text-sm">{{ 'Section'|trans }}</h4>
                                        </div>
                                    </div>
                                    <p class="text-sm mb-0">{{ book.section|default('---') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row  pt-2 pb-2">
                        <div class="col-md-6">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <i class="ni ni-support-16"></i>
                                </div>
                                <div class="col ml--2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0 text-sm">{{ 'International Standard Book Number'|trans }}</h4>
                                        </div>
                                    </div>
                                    <p class="text-sm mb-0">{{ book.isbn|default('---') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card bg-secondary shadow mt-4">
                <div class="card-header bg-white border-2">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">{{ 'Category'|trans }}</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <i class="ni ni-book-bookmark"></i>
                                </div>
                                <div class="col ml--2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0 text-sm">{{ 'Title'|trans }}</h4>
                                        </div>
                                    </div>
                                    <p class="text-sm mb-0">{{ book.category.title }}</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <i class="ni ni-support-16"></i>
                                </div>
                                <div class="col ml--2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0 text-sm">{{ 'Code'|trans }}</h4>
                                        </div>
                                    </div>
                                    <p class="text-sm mb-0">{{ book.category.code|default('---') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    {{ render(controller(
        'App\\Controller\\BookShopController::renderMakeReservationType',
        { 'book': book }
    )) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <script src="{{ asset('assets/js/make-reservation.js') }}"></script>
{% endblock %}