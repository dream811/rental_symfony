{% extends 'client_layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <!-- CSS -->
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/css/alertify.min.css"/>
    <!-- Default theme -->
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/css/themes/default.min.css"/>
{% endblock %}
{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="row row-grid">
                {% for item in books %}
                        <div class="col-lg-4 pb-4">
                            <div class="card bg-secondary shadow">
                                <div class="card-header bg-white border-2 card-header-height-medium" style="background-image: url({{ vich_uploader_asset(item.book, 'coverFile')|default(asset('assets/img/icons/no-cover.png')) }});">
                                    <div class="row">
                                        <div class="col">
                                            <div class="float-left pt-2 pl-2">
                                                <p class="badge card-badge-primary">{{ item.book.quantity - item.reservedBooks }} {{ 'Book available'|trans }}</p>
                                            </div>
                                        </div>
                                        <div class="col-auto">
                                            <div class="float-right pt-2 pr-2">
                                                <p class="badge card-badge-primary">{{ item.book.category.title }}</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

{#                                <div class="row">#}
{#                                    <div class="col">#}
{#                                        <div class="card-img-top pt-2">#}
{#                                            <img  src="{{ vich_uploader_asset(item.book, 'coverFile')|default(asset('assets/img/icons/no-cover.png')) }}"#}
{#                                                 class="img-center card-book-cover" alt="">#}
{#                                        </div>#}
{#                                    </div>#}
{#                                </div>#}

                                <div class="card-body plr-5">
                                    <div class="pb-2">
                                        <h4 class="mb-0 text-sm text-blue">{{ 'Book title'|trans }}</h4>
                                        <p class="text-sm mb-0">{{ item.book.title|truncate(40) }}</p>
                                    </div>

{#                                    <div class="pb-2">#}
{#                                        <h4 class="mb-0 text-sm text-blue">{{ 'Book Author'|trans }}</h4>#}
{#                                        <p class="text-sm mb-0">{{ item.book.author|default('---') }}</p>#}
{#                                    </div>#}

                                    <div class="pb-2">
                                        <h4 class="mb-0 text-sm text-blue">{{ 'Description'|trans }}</h4>
                                        <p class="text-sm mb-0">{{ item.book.description|truncate(40) }}</p>
                                    </div>

{#                                    <div class="pb-2">#}
{#                                        <h4 class="mb-0 text-sm text-blue">{{ 'Publish date'|trans }}</h4>#}
{#                                        <p class="text-sm mb-0">{{ item.book.publishDate|date('m/d/Y')|default('---') }}</p>#}
{#                                    </div>#}
                                </div>
                                <div class="card-footer">
                                    <div class="row">
                                        <div class="col">
                                            <a class="btn btn-sm btn-info mb-3" href="{{ path('book_shop_show', {'id': item.book.id}) }}">
                                                {{ 'Book Details'|trans }}
                                            </a>
                                        </div>
                                        <div class="col-auto">
                                            <button type="button" class="btn btn-sm btn-primary mb-3" data-toggle="modal"
                                                    data-target="#modal-{{ item.book.id }}">
                                                {{ 'Borrow this book'|trans }}
                                            </button>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                    {{ render(controller(
                        'App\\Controller\\BookShopController::renderMakeReservationType',
                        { 'book': item.book }
                    )) }}
                {% else %}
                    <div class="col-lg-12">
                        <div class="card card-lift--hover shadow">
                            <div class="card-body text-center plr-5">
                                <img class="col-2 pb-4" src="{{ asset('assets/img/icons/search.svg') }}" alt="">
                                <h2>{{ "No results were found to match your search item"|trans }}</h2>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# display navigation #}
            <div class="float-right pt-4 pb-4" aria-label="Page navigation example">
                {{ knp_pagination_render(books) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/alertifyjs@1.11.2/build/alertify.min.js"></script>
    <script src="{{ asset('assets/js/make-reservation.js') }}"></script>
{% endblock %}