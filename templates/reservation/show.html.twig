{% extends 'admin_layout.html.twig' %}

{% block title %}{{ 'Reservation'|trans }}{% endblock %}


{% block body %}
<div class="row align-items-center py-4">
    <div class="col-lg-6 col-7">
        <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
            <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                <li class="breadcrumb-item"><a href="#"><i class="fas fa-book-reader"></i></a></li>
                <li class="breadcrumb-item"><a href="{{ path('reservation_index') }}">{{ 'Reservations'|trans }}</a>
                </li>
                <li class="breadcrumb-item active"><a href="#">{{ 'Reservation'|trans }}</a></li>
            </ol>
        </nav>
    </div>
    <div class="col-lg-6 col-5 text-right">
        {{ include('reservation/_delete_form.html.twig') }}
        <a href="{{ path('reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-neutral"><i
                    class="fas fa-pencil-alt"></i> {{ 'Edit Reservation'|trans }}</a>
        <a href="{{ path('reservation_index') }}" class="btn btn-sm btn-neutral"><i
                    class="fas fa-home"></i> {{ 'Back to list'|trans }}</a>
    </div>
</div>

<div class="card bg-secondary shadow">
    <div class="card-header bg-white border-1">
        <div class="row align-items-center">
            <div class="col-8">
                <h3 class="mb-0">{{ 'Reservation'|trans }}</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row  pt-2 pb-2">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-calendar-grid-58"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Created At'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '---' }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-calendar-grid-58"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Updated At'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.updatedAt ? reservation.updatedAt|date('Y-m-d H:i:s') : '---' }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pt-2 pb-2">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-calendar-grid-58"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Start Borrowing Date'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.startBorrowingDate ? reservation.startBorrowingDate|date('Y-m-d') : '---' }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-calendar-grid-58"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'End Borrowing Date'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.endBorrowingDate ? reservation.endBorrowingDate|date('Y-m-d') : '---' }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pt-2 pb-2">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-books"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Requested Quantity'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.requestedQuantity|default('---') }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-books"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Borrowed Quantity'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.borrowedQuantity|default('---') }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row pt-2 pb-2">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-support-16"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Status'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.status }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card bg-secondary mt-4">
    <div class="card-header bg-white border-1">
        <div class="row align-items-center">
            <div class="col-8">
                <h3 class="mb-0">{{ 'Book'|trans }}</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row  pt-2 pb-2">
            <div class="col-md-12">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-book-bookmark"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Title of the book'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.book.title }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row  pt-2 pb-2">
            <div class="col-md-12">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-bag-17"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Description'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.book.description }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row  pt-2 pb-2">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-circle-08"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Author of the book'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.book.author }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-calendar-grid-58"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Publish date'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.book.publishDate|date('d/m/yy')|default('---') }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row  pt-2 pb-2">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-books"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Quantity'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.book.quantity }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-planet"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Section'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.book.section|default('---') }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row  pt-2 pb-2">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-support-16"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'International Standard Book Number'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.book.isbn|default('---') }}</p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="card bg-secondary shadow mt-4">
    <div class="card-header bg-white border-1">
        <div class="row align-items-center">
            <div class="col-8">
                <h3 class="mb-0">{{ 'Category'|trans }}</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row ">
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-book-bookmark"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Title'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.book.category.title }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <i class="ni ni-support-16"></i>
                    </div>
                    <div class="col ml--2">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-0 text-sm">{{ 'Code'|trans }}</h4>
                            </div>
                        </div>
                        <p class="text-sm mb-0">{{ reservation.book.category.code|default('---') }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card bg-secondary shadow  mt-4">
    <div class="card-header bg-white border-0">
        <div class="row align-items-center">
            <div class="col-8">
                <h3 class="mb-0">{{ 'User'|trans }}</h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <h6 class="heading-small text-muted mb-4">{{ 'User information'|trans }}</h6>
        <div class="pl-lg-4">
            <div class="row">
                <div class="col-lg-6">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="ni ni-single-02"></i>
                        </div>
                        <div class="col ml--2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0 text-sm">{{ 'Username'|trans }}</h4>
                                </div>
                            </div>
                            <p class="text-sm mb-0">{{ reservation.user.username }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="ni ni-email-83"></i>
                        </div>
                        <div class="col ml--2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0 text-sm">{{ 'Email address'|trans }}</h4>
                                </div>
                            </div>
                            <p class="text-sm mb-0">{{ reservation.user.email }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-lg-6">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="ni ni-single-02"></i>
                        </div>
                        <div class="col ml--2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0 text-sm">{{ 'First name'|trans }}</h4>
                                </div>
                            </div>
                            <p class="text-sm mb-0">{{ reservation.user.firstName|default('No data'|trans) }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="ni ni-single-02"></i>
                        </div>
                        <div class="col ml--2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0 text-sm">{{ 'Last name'|trans }}</h4>
                                </div>
                            </div>
                            <p class="text-sm mb-0">{{ reservation.user.lastName|default('No data'|trans) }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-lg-12">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="ni ni-calendar-grid-58"></i>
                        </div>
                        <div class="col ml--2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0 text-sm">{{ 'Birthday'|trans }}</h4>
                                </div>
                            </div>
                            <p class="text-sm mb-0">{{ reservation.user.birthday|date('d/m/yy')|default('No data'|trans) }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-4"/>
        <!-- Address -->
        <h6 class="heading-small text-muted mb-4">{{ 'Contact information'|trans }}</h6>
        <div class="pl-lg-4">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="ni ni-world"></i>
                        </div>
                        <div class="col ml--2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0 text-sm">{{ 'Address'|trans }}</h4>
                                </div>
                            </div>
                            <p class="text-sm mb-0">{{ reservation.user.address|default('No data'|trans) }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-lg-12">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <i class="ni ni-mobile-button"></i>
                        </div>
                        <div class="col ml--2">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="mb-0 text-sm">{{ 'Phone'|trans }}</h4>
                                </div>
                            </div>
                            <p class="text-sm mb-0">{{ reservation.user.phone|default('No data'|trans) }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}
