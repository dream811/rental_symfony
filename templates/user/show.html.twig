{% extends 'admin_layout.html.twig' %}

{% block title %}{{ 'User'|trans }}{% endblock %}
{% block body %}
    <div class="row align-items-center py-4">
        <div class="col-lg-6 col-7">
            <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
                <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                    <li class="breadcrumb-item"><a href="#"><i class="fas fa-user-plus"></i></a></li>
                    <li class="breadcrumb-item"><a href="{{ path('user_index') }}">{{ 'Users'|trans }}</a></li>
                    <li class="breadcrumb-item active"><a href="#">{{ 'User'|trans }}</a></li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-6 col-5 text-right">
            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-sm btn-neutral"><i class="fas fa-pencil-alt"></i> {{ 'Edit User'|trans }}</a>
            <a href="{{ path('user_index') }}" class="btn btn-sm btn-neutral"><i class="fas fa-home"></i> {{ 'Back to list'|trans }}</a>
        </div>
    </div>

    <div class="card bg-secondary shadow">
        <div class="card-header bg-white border-0">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">{{ 'Account'|trans }}</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <h6 class="heading-small text-muted mb-4">{{ 'User information'|trans }}</h6>
            <div class="pl-lg-4">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <i class="ni ni-single-02"></i>
                            </div>
                            <div class="col ml--2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="mb-0 text-sm">{{ 'Username'|trans }}</h4>
                                    </div>
                                </div>
                                <p class="text-sm mb-0">{{ user.username }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <i class="ni ni-email-83"></i>
                            </div>
                            <div class="col ml--2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="mb-0 text-sm">{{ 'Email address'|trans }}</h4>
                                    </div>
                                </div>
                                <p class="text-sm mb-0">{{ user.email }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-3">
                    <div class="col-lg-6">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <i class="ni ni-single-02"></i>
                            </div>
                            <div class="col ml--2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="mb-0 text-sm">{{ 'First name'|trans }}</h4>
                                    </div>
                                </div>
                                <p class="text-sm mb-0">{{ user.firstName|default('No data'|trans) }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <i class="ni ni-single-02"></i>
                            </div>
                            <div class="col ml--2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="mb-0 text-sm">{{ 'Last name'|trans }}</h4>
                                    </div>
                                </div>
                                <p class="text-sm mb-0">{{ user.lastName|default('No data'|trans) }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-3">
                    <div class="col-lg-12">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <i class="ni ni-calendar-grid-58"></i>
                            </div>
                            <div class="col ml--2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="mb-0 text-sm">{{ 'Birthday'|trans }}</h4>
                                    </div>
                                </div>
                                <p class="text-sm mb-0">{{ user.birthday|date('d/m/yy')|default('No data'|trans) }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="my-4"/>
            <!-- Address -->
            <h6 class="heading-small text-muted mb-4">{{ 'Contact information'|trans }}</h6>
            <div class="pl-lg-4">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <i class="ni ni-world"></i>
                            </div>
                            <div class="col ml--2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="mb-0 text-sm">{{ 'Address'|trans }}</h4>
                                    </div>
                                </div>
                                <p class="text-sm mb-0">{{ user.address|default('No data'|trans) }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-3">
                    <div class="col-lg-12">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <i class="ni ni-mobile-button"></i>
                            </div>
                            <div class="col ml--2">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h4 class="mb-0 text-sm">{{ 'Phone'|trans }}</h4>
                                    </div>
                                </div>
                                <p class="text-sm mb-0">{{ user.phone|default('No data'|trans) }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
